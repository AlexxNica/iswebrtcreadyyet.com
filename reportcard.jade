    .wrap
      section
        h1 Is WebRTC ready yet?
        #report-card
          h2 Recent calls report card

          h2 Current Overall Score 
            span.rating( data-browser='overall', data-metric='highQuality', data-metric-unit='percentage')
          
          .report-card-browser( data-browser='Chrome' )
            h3 Chrome

            .report-card-section
              h4 High Quality
              .bar-chart( data-metric='highQuality', data-metric-unit='percentage' )
                .bar-chart-background
                  .bar-chart-bar

            .report-card-section
              h4 Good video
              .bar-chart( data-metric='videoProblems', data-metric-unit='percentage-inverted' )
                .bar-chart-background
                  .bar-chart-bar

            .report-card-section
              h4 Good audio
              .bar-chart( data-metric='audioProblems', data-metric-unit='percentage-inverted' )
                .bar-chart-background
                  .bar-chart-bar

          .report-card-browser( data-browser='Firefox' )
            h3 Firefox

            .report-card-section
              h4 High Quality
              .bar-chart( data-metric='highQuality', data-metric-unit='percentage' )
                .bar-chart-background
                  .bar-chart-bar

            .report-card-section
              h4 Good video
              .bar-chart( data-metric='videoProblems', data-metric-unit='percentage-inverted' )
                .bar-chart-background
                  .bar-chart-bar

            .report-card-section
              h4 Good audio
              .bar-chart( data-metric='audioProblems', data-metric-unit='percentage-inverted' )
