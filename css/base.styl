/*!
* Base
*/

@import colors

*, *:after, *:before
  -webkit-box-sizing: border-box
  -moz-box-sizing: border-box
  box-sizing: border-box

::-moz-selection
  background-color: $blue-light
  color: white

::selection
  background-color: $blue-light
  color: white

html
  font-size: 100%

body
  font-family: 'Gotham Rounded A', 'Gotham Rounded B', 'Helvetica Neue', Helvetica, Arial, sans-serif
  font-weight: 400
  font-size: 1em
  text-rendering: optimizeLegibility
  -webkit-font-smoothing: antialiased
  color: $gray-darker
  line-height: 1.5
  background: url(http://andyet.com/images/header.png) top center no-repeat

h1, h2, h3, strong
  font-weight: 700

h1, h2, h3
  color: black

h1
  margin: 0
  font-size: 3em
  text-align: center

h2
  margin: 0 0 .715em 0
  padding-bottom: .715em
  font-size: 1.75em

h3
  margin: 1.5em 0
  font-size: 1.25em

h2, h3
  line-height: 1.2

p
  margin-bottom: 1.25em

  &:last-of-type
    margin: 0

a
  color: $blue
  text-decoration: none
  cursor: pointer

  &:hover 
    color: darken($blue, 20%)

.content
  margin: 8.5em auto 0

section
  padding-bottom: 1.875em
  margin-bottom: 1.875em
  border-bottom: 1px solid $gray-lighter  

  &:last-of-type
    border: none

.cf
  &:before,
  &:after
    content: " "
    display: table

  &:after
    clear: both

.talky-logo
  display: block
  height: 90px
  width: 150px
  margin: 0 auto
  background-repeat: no-repeat
  background-size: contain
  background-image: url(unquote('data:image/svg+xml;base64,'))

  &:hover
    opacity: .7

.card
  border: 1px solid $gray-lighter
  margin: 1.25em auto
  padding: 1.25em 2.5em 2.5em 2.5em
  box-shadow: lighten($gray-lighter, 50%) 0 2px 5px

  h2
    border-bottom: 1px solid $gray-lighter
    text-align: center

td
  border: 1px solid #fff
  width: 75px

.browsers th, .versions th
  text-align: center
  padding-right: 0px

.browsers 
  img
    width: 48px
    margin-bottom: .625em

tr.about td, 
.versions th,
th
  font-size: .8125em
  

tr.about 
  display: none

  td
    padding: 0.75em
    background-color: lighten($gray-lighter, 50%)

.versions th
  font-weight: bold
  padding-bottom: .625em

th
  text-align: right
  font-weight: normal
  padding-right: .625em

  a:link, a:visited
    color: #333
    cursor: help

    &:hover
      color: $blue

.yes
  background: $green

.inc
  background: $yellow

.no
  background: $red

.help
  article
    float: left
    width: 60%

  aside
    float: right
    width: 33%
    background: lighten($gray-lighter, 70%)
    padding: 1.25em
    text-align: center
    font-size: .8125em


@media screen and (max-width: 31.25em)

  h1
    font-size: 2.2em

@media screen and (max-width: 48em)
  .content
    width: 90%

  .help

    article, aside
      float: none
      width: 100%

    aside
      margin-top: 2.5em

  .browsers img
    width: 24px
    margin-bottom: .1875em

  .versions
    display: none

  th
    font-size: .6875em

  td
    height: 30px

  #support
    padding: .625em


@media screen and (min-width: 48.0625em)
  .content
    width: 70%

@media screen and (min-width: 68.75em)
  .content
    width: 55%