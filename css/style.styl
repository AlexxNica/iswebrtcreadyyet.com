// style.styl

@import base
@import graph

.card
  border: 1px solid #eee
  margin: 20px auto
  padding: 20px 40px 40px 40px
  shadow: rgba(0,0,0,.05) 0 2px 10px

  h2
    border-bottom: 1px solid #eee
    text-align: center

.card + .card
  margin-top: 40px

td
  border: 1px solid #fff
  width: 75px

.browsers th, .versions th
  text-align: center
  padding-right: 0px

.browsers 
  th
    font-size: 13px
    text-transform: uppercase
    text-decoration: underline
    font-weight: normal
    color: #777

  img
    width: 48px
    margin-bottom: 10px

tr.about 
  display: none

  td
    font-size: 13px
    padding: 5px
    color: #555
    background-color: #fafafa
    border-bottom: 10px solid #fff

.versions th
  font-weight: bold
  font-size: 13px
  padding-bottom: 10px

th
  text-align: right
  font-weight: normal
  font-size: 13px
  padding-right: 10px

  a:link, a:visited
    color: #333
    cursor: help

.yes
  background: limegreen

.inc
  background: gold

.no
  background: red

.help
  article
    float: left
    width: 60%

  aside
    float: right
    width: 33%
    background: lighten($gray-lighter, 70%)
    padding: 1.25em
    text-align: center
    font-size: .8125em


@media (max-width: 48em)

  .help

    article, aside
      float: none
      width: 100%

    aside
      margin-top: 40px

  .browsers img
    width: 24px
    margin-bottom: 3px

  .versions
    display: none

  th
    font-size: 11px

  td
    height: 30px

  #support
    padding: 10px
