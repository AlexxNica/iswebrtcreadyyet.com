// style.styl

@import base
@import graph

.card
  border: 1px solid $gray-lighter
  margin: 1.25em auto
  padding: 1.25em 2.5em 2.5em 2.5em
  box-shadow: lighten($gray-lighter, 50%) 0 2px 5px

  h2
    border-bottom: 1px solid $gray-lighter
    text-align: center

td
  border: 1px solid #fff
  width: 75px

.browsers th, .versions th
  text-align: center
  padding-right: 0px

.browsers 
  img
    width: 48px
    margin-bottom: .625em

tr.about td, 
.versions th,
th
  font-size: .8125em
  

tr.about 
  display: none

  td
    padding: 0.75em
    background-color: lighten($gray-lighter, 50%)

.versions th
  font-weight: bold
  padding-bottom: .625em

th
  text-align: right
  font-weight: normal
  padding-right: .625em

  a:link, a:visited
    color: #333
    cursor: help

    &:hover
      color: $blue

.yes
  background: $green

.inc
  background: $yellow

.no
  background: $red

.help
  article
    float: left
    width: 60%

  aside
    float: right
    width: 33%
    background: lighten($gray-lighter, 70%)
    padding: 1.25em
    text-align: center
    font-size: .8125em


@media (max-width: 48em)

  .help

    article, aside
      float: none
      width: 100%

    aside
      margin-top: 2.5em

  .browsers img
    width: 24px
    margin-bottom: .1875em

  .versions
    display: none

  th
    font-size: .6875em

  td
    height: 30px

  #support
    padding: .625em
